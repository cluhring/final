<%= form_for [@list, @task], html: {multipart: true} do |f| %>
	<ul>
		<% @task.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</p>
  <p>
    <%= f.label :due_date %><br />
    <%= f.text_area :due_date %>
  </p>
	<p>
		<%= f.label :image, "Attach an Image" %><br />
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
