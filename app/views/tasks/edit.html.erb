<h1>Edit yo Task</h1>

<%= form_for @task, :url => {:controller => "tasks", :action => "update"} do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
  <p>
    <%= f.label "Completed?" %><br />
    <%= check_box(:task, :status, {}, true)%>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :due_date %><br />
    <%= f.text_area :due_date %>
  </p>
  <p>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
