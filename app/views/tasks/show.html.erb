<div id="task">
  <strong>Task:</strong> <%= @task.title %><br>
  <strong>Description: </strong><%= @task.description %><br>
  <strong>Status: </strong><%= @task.true? %><br>
  <strong>Due Date: </strong><%= @task.due_date %><br>
</div>

<%= link_to "Edit Task", edit_list_task_path(id: @task.id) %><br><br>


  <% if @task.pictured? %>
    <strong>Picture: </strong><%= image_tag @task.pdf.url(:medium) %><br><br>
    <%= button_to "Delete Picture", delete_pic_path(pdf: @task.pdf)  %>
  <% end %><br><br>

  <%= link_to "<< Back to your List", list_path(@task.list_id) %>
